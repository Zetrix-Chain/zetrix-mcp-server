{
  "name": "zetrix-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Zetrix blockchain interaction",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zetrix-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "test": "node tests/test-server.js",
    "setup": "node scripts/setup-claude.js",
    "test:mainnet": "ZETRIX_NETWORK=mainnet node tests/test-server.js",
    "test:testnet": "ZETRIX_NETWORK=testnet node tests/test-server.js",
    "test:sdk": "node tests/test-sdk.js",
    "test:sdk:mainnet": "ZETRIX_NETWORK=mainnet node tests/test-sdk.js",
    "test:sdk:testnet": "ZETRIX_NETWORK=testnet node tests/test-sdk.js",
    "test:encryption": "node tests/test-encryption.js",
    "test:crypto": "node tests/test-encryption.js"
  },
  "keywords": [
    "mcp",
    "zetrix",
    "blockchain",
    "model-context-protocol"
  ],
  "author": "Dr. Ammar Abdullah",
  "email": "dev@zetrix.com",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.13.2",
    "ws": "^8.18.3",
    "zetrix-encryption-nodejs": "^1.0.1",
    "zetrix-sdk-nodejs": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
